{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "category": {
      "type": "string",
      "required": true
    },
    "materials": {
      "type": "text",
      "required": true
    },
    "lengths": {
      "type": "text",
      "required": true
    },
    "customized": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "stockCount": {
      "type": "integer",
      "required": false
    },
    "primaryDescription": {
      "type": "text",
      "required": true
    },
    "secondaryDescription": {
      "type": "richtext"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "colors": {
      "type": "string",
      "required": true
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "product"
    }
  }
}
